        <item name="themeIcon">@drawable/ic_btc</item>
        <item name="themeIconNoPadding">@drawable/ic_btc_no_padding</item>

        <item name="drawableSendReceiveIcColor">@color/colorAccent</item>
        <item name="sendReceiveBtnBg">@color/buttonJungleGreen</item>

        <item name="receiveIconArrow">@color/accentLight</item>
