<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="it.baloo.bitcoinpeople.ui.accounts.SubaccountSelectActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_total_balance"
        android:padding="@dimen/sections_spacing"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/sections_spacing"
        android:paddingEnd="@dimen/sections_spacing"
        android:paddingBottom="@dimen/sections_spacing"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/total_amount_btc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0 BTC"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/total_amount_fiat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" â‰ˆ $0.00"
            android:textColor="@color/grey_light"
            android:textSize="18sp"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/accountsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>


</LinearLayout>
